{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-danger" href="{{ path('app_logout') }}">Logout</a>
    <table class="table">
        <tr>
            <th>Username</th>
            <th>Active</th>
        </tr>

        {% for user in pagination %}
            <tr>
                <td>{{ user.username }}</td>
                <td>
                    <a href="{% if app.user.username == user.username %}#{% else %}{{ path('app_toggleuser', {'username': user.username  }) }}{% endif %}">
                        <span class="glyphicon glyphicon-{% if user.disabled is defined and user.disabled %}unchecked{% else %}check{% endif %}"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
    {# display navigation #}
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
